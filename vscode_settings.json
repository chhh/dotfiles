{
    "window.commandCenter": 1,
    "workbench.colorTheme": "JetBrains Darcula Theme",
    // Enable testing using pytest.
    "python.testing.pytestEnabled": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    "terminal.integrated.defaultProfile.osx": "zsh",
    "editor.multiCursorModifier": "ctrlCmd",
   
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#d309bbc5",
        "editor.selectionHighlightBackground": "#d309bbc5", // highlight words same as selection
        "editor.findMatchHighlightBackground" :"#d91c4e72",
        "editor.findMatchBackground": "#e100ffc3",
        "editor.lineHighlightBackground": "#a612b624",
        "tree.indentGuidesStroke": "#2fff00",
    },

    "workbench.tree.indent": 20,
    


    "notebook.lineNumbers": "on",
    "python.terminal.activateEnvironment": false,
    "diffEditor.ignoreTrimWhitespace": true,
    "diffEditor.maxComputationTime": 0,
    "git.enableSmartCommit": true,
    "diffEditor.hideUnchangedRegions.enabled": true
}