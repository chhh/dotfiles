ask-and-stop() {
    read -n 1 -p "Stop now? (y/n)" and;
    printf "\n"
    case $and in
        y|Y)
            echo "Stopping."
            sExit && return 0 
            ;;
        *)
            ;;
    esac
    printf "Proceeding...\n"
}

function die() {
    set -e
    /bin/false
}

function sExit() {
    [ "X$(basename $0 2>/dev/null)" = "X$(basename $BASH_SOURCE)" ] && exit 0 || return 0
}

ask-and-run() {
echo "Command to run:"
echo $1
read -n 1 -p "Would you like to proceed? (y/n/c)" ans;
printf "\n"
case $ans in
    y|Y)
        eval $1
        ;;
    *)
        printf "\nNot running, exiting.\n"
        ;;
esac
}

